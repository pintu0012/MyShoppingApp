<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="12dp" android:layout_marginBottom="@dimen/margin_12dp">
    <RelativeLayout android:id="@+id/top_view" android:background="@drawable/dialog_with_white_corner_baground" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="18sp" android:textColor="@color/active_text" android:gravity="center" android:id="@+id/upload_image_textview" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Upload Image" android:fontFamily="@font/proxima_nova_reg"/>
        <View android:id="@+id/line" android:background="@color/color_afb5" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/upload_image_textview"/>
        <TextView android:textSize="18sp" android:textColor="@color/active_text" android:gravity="center" android:id="@+id/capture_image_textview" android:padding="12dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Capture Image" android:layout_below="@+id/line" android:fontFamily="@font/proxima_nova_reg"/>
    </RelativeLayout>
    <View android:id="@+id/transperent_view" android:background="@android:color/transparent" android:layout_width="match_parent" android:layout_height="4dp" android:layout_below="@+id/top_view"/>
    <Button android:textSize="18sp" android:textColor="@color/green84c225" android:id="@+id/cancel_button" android:background="@drawable/customer_button_with_corner" android:padding="16dp" android:layout_width="match_parent" android:layout_height="wrap_content" android:text="Cancel" android:layout_below="@+id/transperent_view" android:fontFamily="@font/proximanovabold"/>
</RelativeLayout>
