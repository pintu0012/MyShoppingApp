<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
    <view android:id="@+id/image" android:background="#55000000" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_x="0dp" android:layout_y="0dp" class="eu.janmuller.android.simplecropimage.CropImageView"/>
    <RelativeLayout android:orientation="horizontal" android:paddingLeft="10dp" android:paddingRight="10dp" android:layout_width="wrap_content" android:layout_height="50dp" android:layout_alignParentBottom="true" android:layout_centerHorizontal="true">
        <Button android:id="@+id/discard" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/cancel" android:layout_alignParentLeft="true" style="@style/CropButton"/>
        <ImageButton android:id="@+id/rotateLeft" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/ic_rotate_left" android:layout_toRightOf="@+id/discard" style="@style/CropButton"/>
        <ImageButton android:id="@+id/rotateRight" android:layout_width="50dp" android:layout_height="match_parent" android:src="@drawable/ic_rotate_right" android:layout_toRightOf="@+id/rotateLeft" style="@style/CropButton"/>
        <Button android:id="@+id/save" android:layout_width="wrap_content" android:layout_height="match_parent" android:text="@string/save" android:layout_toRightOf="@+id/rotateRight" style="@style/CropButton"/>
    </RelativeLayout>
</RelativeLayout>
