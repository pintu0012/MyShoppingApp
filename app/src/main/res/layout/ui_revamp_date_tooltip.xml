<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent">

    <LinearLayout
        android:id="@+id/arrow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/container"
        android:layout_marginLeft="@dimen/dimen_8dp"
        android:layout_marginRight="@dimen/dimen_8dp"
        android:weightSum="4">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ui_revamp_down_arrow_tooltip"
                android:rotation="180" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="2" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/arrow_layout"
        android:layout_marginLeft="@dimen/margin_15dp"
        android:background="@drawable/ui_revamp_tooltip_bg"
        android:paddingLeft="@dimen/margin_14dp"
        android:paddingTop="@dimen/dimen_8dp"
        android:paddingRight="@dimen/margin_14dp"
        android:paddingBottom="@dimen/dimen_8dp">

        <TextView
            android:id="@+id/selected_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your delivery date is Sat, Jun 12 2019"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_11sp" />
    </RelativeLayout>
</RelativeLayout>
