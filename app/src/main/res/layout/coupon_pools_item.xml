<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:paddingTop="10dp" android:paddingBottom="10dp" android:layout_width="match_parent" android:layout_height="match_parent">
    <com.appvirality.appviralityui.custom.RoundedImageView android:id="@+id/company_logo" android:layout_width="80dp" android:layout_height="80dp" android:layout_marginLeft="10dp"/>
    <LinearLayout android:orientation="vertical" android:id="@+id/coupon_data_layout" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:layout_marginRight="10dp" android:layout_toRightOf="@+id/company_logo">
        <TextView android:textSize="15sp" android:textStyle="bold" android:textColor="#333" android:id="@+id/coupon_title" android:layout_width="match_parent" android:layout_height="wrap_content"/>
        <TextView android:textSize="12sp" android:textColor="#333" android:id="@+id/coupon_desc" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp"/>
        <RelativeLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="5dp">
            <TextView android:textSize="12sp" android:textColor="#333" android:id="@+id/coupon_amount" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Required Credits : " android:layout_toLeftOf="@+id/btn_claim_coupon" android:layout_alignParentLeft="true" android:layout_centerVertical="true"/>
            <TextView android:textStyle="bold" android:textColor="@color/claim_btn_color" android:id="@+id/btn_claim_coupon" android:background="@drawable/claim_btn" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="10dp" android:text="CLAIM" android:layout_alignParentRight="true"/>
        </RelativeLayout>
    </LinearLayout>
    <View android:id="@+id/divider" android:background="#bdbdbd" android:layout_width="match_parent" android:layout_height="1dp" android:layout_marginTop="10dp" android:layout_below="@+id/coupon_data_layout"/>
</RelativeLayout>
