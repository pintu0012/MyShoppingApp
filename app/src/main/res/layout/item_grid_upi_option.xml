<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@drawable/grid_item_background" android:padding="5dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="5dp">
    <LinearLayout android:id="@+id/linear_upi_option_root" android:layout_width="match_parent" android:layout_height="match_parent">
        <FrameLayout android:layout_gravity="center_horizontal" android:layout_width="match_parent" android:layout_height="match_parent">
            <LinearLayout android:gravity="center" android:orientation="vertical" android:padding="3dp" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="2dp">
                <ImageView android:layout_gravity="center" android:id="@+id/img_upi_option" android:layout_width="55dp" android:layout_height="55dp" android:layout_margin="5dp"/>
                <TextView android:textSize="12sp" android:id="@+id/text_upi_option_display_name" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            </LinearLayout>
            <ImageView android:layout_gravity="right" android:id="@+id/img_select_upi" android:focusable="false" android:layout_width="20dp" android:layout_height="20dp"/>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>
