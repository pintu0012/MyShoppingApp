<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/hc_layoutContent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:background="?attr/selectableItemBackground"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0"
        app:layout_constraintVertical_chainStyle="1">

        <TextView
            android:id="@+id/hc_text_top"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/proximanovasemibold"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/gery_9ca3a5"
            android:textSize="12sp"
            android:visibility="gone" />

        <TextView
            android:id="@+id/hc_text_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/proximanovasemibold"
            android:textAllCaps="true"
            android:textColor="@color/gery_9ca3a5"
            android:textSize="@dimen/textsize_11sp" />

        <TextView
            android:id="@+id/hc_text_bottom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:fontFamily="@font/proximanovasemibold"
            android:textAllCaps="true"
            android:textColor="@color/black_39474c"
            android:textSize="@dimen/text_size_11sp" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/hc_events_recyclerView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="0dp"
            android:gravity="center_horizontal" />

        <View
            android:id="@+id/hc_selector"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginTop="0dp"
            android:background="@color/bbd_primary"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="0"
            app:layout_constraintEnd_toEndOf="0"
            app:layout_constraintStart_toStartOf="0"
            app:layout_constraintTop_toBottomOf="@+id/hc_layoutContent" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
