<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:aapt="http://schemas.android.com/aapt" android:orientation="vertical" android:background="@color/white" android:layout_width="match_parent" android:layout_height="match_parent" android:layout_margin="20dp">
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_margin="20dp">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:textSize="16sp" android:textColor="@color/pwe_error_color" android:gravity="center_horizontal" android:id="@+id/text_error_title" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
            <TextView android:textSize="12sp" android:textColor="@color/pwe_hint_color" android:gravity="center_horizontal" android:id="@+id/text_error_desc" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="15dp"/>
        </LinearLayout>
        <Button android:textSize="16sp" android:textColor="@color/pwe_button_text_color" android:gravity="center" android:layout_gravity="center_horizontal" android:id="@+id/btn_alert_ok" android:background="@color/pwe_button_color" android:paddingLeft="30dp" android:paddingRight="30dp" android:layout_width="wrap_content" android:layout_height="30dp" android:layout_marginTop="20dp" android:text="OK" android:textAllCaps="false"/>
    </LinearLayout>
</LinearLayout>
